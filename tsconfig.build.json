{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@rules/*": ["src/rules/*"],
      "@types/*": ["src/types/*"],
      "@constants/*": ["src/constants/*"],
      "@sass/*": ["src/sass/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "node_modules",
    "src/__tests__/**"
  ]
}
